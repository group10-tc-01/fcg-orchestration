# Resource Group
# resource_group_name = "fiap-fase-02"
# location            = "eastus"

# Azure Container Registry
# acr_name            = "fiapcr"
# acr_sku             = "Standard"
# acr_admin_enabled   = true

# App Service Plan
# app_service_plan_name = "asp-fcg-microservices"
# app_service_plan_sku  = "B1"

# Web Apps
# webapp_catalog_name  = "fcg-catalog"
# webapp_payments_name = "fcg-payments"
# webapp_users_name    = "fcg-users"

# Docker
# docker_image_tag = "latest"

# SQL Server (OBRIGATÓRIO - defina valores abaixo)
