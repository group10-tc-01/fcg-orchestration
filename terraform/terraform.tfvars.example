# ============================================================================
# Azure Container Registry
# ============================================================================
# acr_name          = "fiapcr"
# acr_sku           = "Standard"
# acr_admin_enabled = true

# ============================================================================
# App Service Plan
# ============================================================================
# app_service_plan_name = "asp-fcg-microservices"
# app_service_plan_sku  = "B1"

# ============================================================================
# Web Apps
# ============================================================================
# webapp_catalog_name  = "fcg-catalog"
# webapp_payments_name = "fcg-payments"
# webapp_users_name    = "fcg-users"

# ============================================================================
# Docker
# ============================================================================
# docker_image_tag = "latest"

# ============================================================================
# SQL Server (OBRIGATÓRIO - defina valores abaixo)
# ============================================================================
# Região onde o SQL Server será criado (pode ser diferente dos Web Apps)
# sql_location = "brazilsouth"

# Nome do SQL Server (deve ser globalmente único na Azure)
# sql_server_name = "fcg-sql-fiap-2026"

# Versão do SQL Server (12.0 = SQL Server 2014)
# sql_server_version = "12.0"

# Credenciais do administrador do SQL Server
# sql_admin_username = "sqladmin"
sql_admin_password = "DEFINA_SUA_SENHA_AQUI"  # OBRIGATÓRIO - Mínimo 8 caracteres com complexidade

# SKU dos databases (Basic, S0, S1, S2, S3, P1, P2, P4)
# sql_database_sku = "Basic"

# ============================================================================
# Firewall do SQL Server - IPs Permitidos
# ============================================================================
# Adicione os IPs que devem ter acesso ao SQL Server
# Formato: "nome_da_regra" = "endereço_ip"
# 
